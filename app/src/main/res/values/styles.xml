<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MainTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="MainTitle.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_title</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="MainTitle.Back">
        <item name="android:layout_width">@dimen/main_title_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/img_back</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="MainTitle.Left">
        <item name="android:layout_width">@dimen/main_title_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/img_back</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="WidgetProgressBarHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>
</resources>
